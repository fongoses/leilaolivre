<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :idItem %><br />
    <%= f.text_field :idItem %>
  </p>
  <p>
    <%= f.label :nomeItem %><br />
    <%= f.text_field :nomeItem %>
  </p>
  <p>
    <%= f.label :linkfoto %><br />
    <%= f.text_field :linkfoto %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
